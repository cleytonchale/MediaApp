<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir HTTP (cleartext) para desenvolvimento e IPs locais -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Configuração para Render (HTTPS) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">onrender.com</domain>
        <domain includeSubdomains="true">mediaapp-backend-9zw7.onrender.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Configuração específica para IPs locais (HTTP) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.56.0</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>
        <domain includeSubdomains="true">10.191.172.0</domain>
        <domain includeSubdomains="true">10.191.172.170</domain>
        <domain includeSubdomains="true">192.168.56.1</domain>
    </domain-config>
</network-security-config>
